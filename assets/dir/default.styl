
html
	background #F5F5F5
	color #555
	-webkit-font-smoothing antialiased

body
	position relative
	margin 30px
	font-family "Helvetica Neue", Helvetica, Arial, freesans, sans-serif

.path
	margin 5px 0px 10px 5px
	font-size 30px

.item
	display block
	padding 6px 2px 2px 2px
	clear both
	border-radius 4px
	font-size 14px
	border 1px solid transparent
	text-decoration none
	color #555
	transition-property color background
	transition-duration 0.2s

	span
		display inline-block
		overflow hidden
		text-overflow ellipsis
		line-height 120%
		text-indent: 10px

.name
	color #222
	width 65%

.dirCount, .size
	width 8%
	text-align right

.mtime
	width 15%
	text-align right

.titles
	margin-bottom 10px

	.item
		background #333
		a, span
			font-weight bold
			color #fff

.dirs
	margin-bottom 10px
	border 1px dashed #aaa
	border-radius 4px

.dirs, .files
	.item
		&:nth-child(odd)
			background #ECECEC

		&:hover
			background #fff
			border-color #eee
			color #1B63D2

			.name
				color #1B63D2