
html
	background #F5F5F5
	color #555
	-webkit-font-smoothing antialiased

body
	position relative
	margin 1em
	font-family "Helvetica Neue", Helvetica, Arial, freesans, sans-serif

.path
	margin 5px 0px 10px 5px
	font-size 30px

.item
	display flex
	flex-wrap wrap
	padding 6px 2px
	clear both
	border-radius 4px
	font-size 14px
	border 1px solid transparent
	text-decoration none
	color #555
	transition-property color background
	transition-duration 0.2s

	div
		overflow hidden
		line-height 120%
		text-indent: 10px

.name
	color #222
	flex-grow 1

.dirCount, .size
	text-align right
	min-width 6em

.mtime
	text-align right
	min-width 14em

.titles
	margin-bottom 10px

	.item
		background #333
		a, span
			font-weight bold
			color #fff

.dirs
	margin-bottom 10px
	border 1px dashed #aaa
	border-radius 4px

	.name
		color #07357B

.dirs, .files
	.item
		&:nth-child(odd)
			background #ECECEC

		&:hover
			background #fff
			border-color #eee
			color #1B63D2

			.name
				color #1B63D2