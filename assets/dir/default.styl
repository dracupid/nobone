
html
	background #F5F5F5
	color #555
	-webkit-font-smoothing antialiased

body
	position relative
	margin 1em
	font-family "Helvetica Neue", Helvetica, Arial, freesans, sans-serif

.path
	margin 0.5em 0 0.5em 0.5em
	font-size 1.5em

.item
	display flex
	flex-wrap wrap
	padding 0.4em 0.7em
	clear both
	border-radius 0.3em
	font-size 0.9em
	border 0.1em solid transparent
	color #555
	transition-property color background
	transition-duration 0.2s

	a
		text-decoration none
		line-height 120%

	div
		overflow hidden
		line-height 120%

.name
	color #222
	flex-grow 1

.dirCount, .size
	text-align right
	min-width 6em

.mtime
	text-align right
	min-width 14em

.titles
	margin-bottom 0.5em

	.item
		background #333
		padding 0.4em 0.7em

		a, span
			font-weight bold
			color #fff

.dirs
	margin-bottom 0.5em
	border 0.1em dashed #aaa
	border-radius 0.3em

	.name
		color #07357B

.dirs, .files
	.item
		&:nth-child(odd)
			background #ECECEC

		&:hover
			background #fff
			border-color #eee
			color #1B63D2

			.name
				color #1B63D2